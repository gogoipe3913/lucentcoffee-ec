{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'section-footer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  /* Keep only dynamic spacing values in Liquid */
  .footer.lucent-footer {
    margin-top: {{ section.settings.margin_top | times: 0.75 | round: 0 }}px;
  }

  .footer.lucent-footer .lucent-footer__inner {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .footer.lucent-footer {
      margin-top: {{ section.settings.margin_top }}px;
    }

    .footer.lucent-footer .lucent-footer__inner {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<footer class="footer lucent-footer color-{{ section.settings.color_scheme }} gradient">
  <div class="lucent-footer__inner">
    <div class="lucent-footer__grid">

      {%- comment -%} LOGO {%- endcomment -%}
      <div class="lucent-footer__col lucent-footer__col--logo">
        <a class="lucent-footer__logo" href="{{ routes.root_url }}" aria-label="{{ shop.name | escape }}">
          {%- if section.settings.logo_image != blank -%}
            {{
              section.settings.logo_image
              | image_url: width: 600
              | image_tag:
                loading: 'lazy',
                widths: '200, 300, 400, 500, 600',
                alt: section.settings.logo_image.alt | default: shop.name
            }}
          {%- elsif settings.brand_image != blank -%}
            {{
              settings.brand_image
              | image_url: width: 600
              | image_tag:
                loading: 'lazy',
                widths: '200, 300, 400, 500, 600',
                alt: settings.brand_image.alt | default: shop.name
            }}
          {%- else -%}
            <span class="lucent-footer__logo-text">{{ shop.name | escape }}</span>
          {%- endif -%}
        </a>
      </div>

      {%- comment -%} CONTACT {%- endcomment -%}
      <div class="lucent-footer__col lucent-footer__col--contact">
        {%- if section.settings.address_label != blank -%}
          <p class="lucent-footer__group-title">{{ section.settings.address_label }}</p>
        {%- endif -%}
        {%- if section.settings.address_text != blank -%}
          <p class="lucent-footer__text lucent-footer__muted">{{ section.settings.address_text }}</p>
        {%- endif -%}

        {%- if section.settings.email_label != blank -%}
          <p class="lucent-footer__group-title">{{ section.settings.email_label }}</p>
        {%- endif -%}
        {%- if section.settings.email_text != blank -%}
          <p class="lucent-footer__text lucent-footer__muted">
            <a class="lucent-footer__link" href="mailto:{{ section.settings.email_text | strip | escape }}">
              {{ section.settings.email_text }}
            </a>
          </p>
        {%- endif -%}

        {%- if section.settings.instagram_label != blank -%}
          <p class="lucent-footer__group-title">{{ section.settings.instagram_label }}</p>
        {%- endif -%}
        {%- if section.settings.instagram_text != blank -%}
          <p class="lucent-footer__text lucent-footer__muted">
            {%- assign ig_handle = section.settings.instagram_text | strip -%}
            {%- assign ig_url = section.settings.instagram_url | strip -%}
            {%- if ig_url == blank and ig_handle != blank -%}
              {%- assign cleaned = ig_handle | remove: '@' -%}
              {%- assign ig_url = 'https://instagram.com/' | append: cleaned -%}
            {%- endif -%}
            {%- if ig_url != blank -%}
              <a class="lucent-footer__link" href="{{ ig_url }}" target="_blank" rel="noopener">
                {{ ig_handle }}
              </a>
            {%- else -%}
              {{ ig_handle }}
            {%- endif -%}
          </p>
        {%- endif -%}
      </div>

      {%- comment -%} MENU A {%- endcomment -%}
      <div class="lucent-footer__col lucent-footer__col--menu-a">
        {%- if section.settings.menu_a != blank -%}
          <ul class="lucent-footer__list">
            {%- for link in section.settings.menu_a.links -%}
              <li>
                <a class="lucent-footer__link" href="{{ link.url }}">
                  {{ link.title | escape }}
                </a>
              </li>
            {%- endfor -%}

            {%- if section.settings.show_cart_link -%}
              <li>
                <a class="lucent-footer__link" href="{{ routes.cart_url }}">
                  Cart({{ cart.item_count }})
                </a>
              </li>
            {%- endif -%}

            {%- if section.settings.show_account_link -%}
              <li>
                <a class="lucent-footer__link" href="{{ routes.account_url }}">
                  Account
                </a>
              </li>
            {%- endif -%}
          </ul>
        {%- endif -%}
      </div>

      {%- comment -%} MENU B {%- endcomment -%}
      <div class="lucent-footer__col lucent-footer__col--menu-b">
        {%- if section.settings.menu_b != blank -%}
          <ul class="lucent-footer__list">
            {%- for link in section.settings.menu_b.links -%}
              <li>
                <a class="lucent-footer__link" href="{{ link.url }}">
                  {{ link.title | escape }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
        {%- endif -%}
      </div>

    </div>
  </div>
  
  <div class="lucent-footer__copyright">
    Â© {{ 'now' | date: '%Y' }} lucentcoffee. All rights reserved.
  </div>
</footer>

{% schema %}
{
  "name": "t:sections.footer.name",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },

    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Footer logo image"
    },

    {
      "type": "header",
      "content": "Contact"
    },
    {
      "type": "text",
      "id": "address_label",
      "label": "Address label",
      "default": "ADDRESS"
    },
    {
      "type": "textarea",
      "id": "address_text",
      "label": "Address text",
      "default": "Lemon building 1F, Kotobuki, Taito-ku, Tokyo"
    },
    {
      "type": "text",
      "id": "email_label",
      "label": "Email label",
      "default": "EMAIL"
    },
    {
      "type": "text",
      "id": "email_text",
      "label": "Email",
      "default": "lucentcoffee@gmail.com"
    },
    {
      "type": "text",
      "id": "instagram_label",
      "label": "Instagram label",
      "default": "INSTAGRAM"
    },
    {
      "type": "text",
      "id": "instagram_text",
      "label": "Instagram handle",
      "default": "@lucentcoffee"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL (optional)"
    },

    {
      "type": "header",
      "content": "Menus"
    },
    {
      "type": "link_list",
      "id": "menu_a",
      "label": "Menu A (left list)"
    },
    {
      "type": "link_list",
      "id": "menu_b",
      "label": "Menu B (right list)"
    },
    {
      "type": "checkbox",
      "id": "show_cart_link",
      "label": "Show Cart link",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_account_link",
      "label": "Show Account link",
      "default": true
    },

    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.footer.settings.margin_top.label",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}
