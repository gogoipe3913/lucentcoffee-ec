{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Lucent collection layout */
  .lucent-collection {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding-left: 2.4rem;
    padding-right: 2.4rem;
  }

  @media screen and (min-width: 990px) {
    .lucent-collection {
      padding-left: 4.8rem;
      padding-right: 4.8rem;
    }
  }

  .lucent-collection__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3.2rem;
  }

  @media screen and (min-width: 990px) {
    .lucent-collection__grid {
      grid-template-columns: 220px 1fr;
      gap: 6.4rem;
      align-items: start;
    }
  }

  .lucent-collection__sidebar {
    font-size: 1.2rem;
    line-height: 1.6;
  }

  .lucent-collection__sidebar-title {
    margin: 0 0 1.2rem;
    font-weight: 400;
    font-size: 1.2rem;
    opacity: 0.9;
  }

  .lucent-collection__sidebar-nav {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .lucent-collection__sidebar-nav a {
    display: inline-block;
    padding: 0.35rem 0;
    text-decoration: none;
    color: inherit;
    opacity: 0.75;
  }

  .lucent-collection__sidebar-nav a:hover {
    opacity: 1;
  }

  .lucent-collection__sidebar-nav a[aria-current="page"] {
    opacity: 1;
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .lucent-collection__header {
    margin: 0 0 2.4rem;
  }

  .lucent-collection__title {
    margin: 0;
    font-size: 2.0rem;
    font-weight: 400;
    letter-spacing: 0.01em;
  }

  /* Product grid spacing tuning */
  .lucent-collection #product-grid.product-grid {
    column-gap: 4.0rem;
    row-gap: 5.2rem;
  }

  @media screen and (min-width: 990px) {
    .lucent-collection #product-grid.product-grid {
      column-gap: 6.0rem;
      row-gap: 6.4rem;
    }
  }

  /* Pagination spacing */
  .lucent-collection .pagination-wrapper {
    margin-top: 4.8rem;
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  <div class="lucent-collection">
    {%- paginate collection.products by section.settings.products_per_page -%}
      <div class="lucent-collection__grid">
        {%- if section.settings.enable_sidebar_collections -%}
          <aside class="lucent-collection__sidebar" aria-label="Collections">
            {%- if section.settings.sidebar_title != blank -%}
              <p class="lucent-collection__sidebar-title">{{ section.settings.sidebar_title | escape }}</p>
            {%- endif -%}

            {%- assign sidebar_menu = linklists[section.settings.sidebar_menu] -%}
            {%- if sidebar_menu != blank and sidebar_menu.links.size > 0 -%}
              <ul class="lucent-collection__sidebar-nav">
                {%- for l in sidebar_menu.links -%}
                  {%- liquid
                    assign is_current = false
                    if l.url == collection.url
                      assign is_current = true
                    endif
                  -%}
                  <li>
                    <a href="{{ l.url }}" {% if is_current %}aria-current="page"{% endif %}>
                      {{ l.title | escape }}
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            {%- else -%}
              <p style="opacity:.7; margin:0;">
                Sidebar menu not found. Set “Sidebar menu” in theme editor.
              </p>
            {%- endif -%}
          </aside>
        {%- endif -%}

        <main>
          <header class="lucent-collection__header">
            <h1 class="lucent-collection__title">{{ collection.title | escape }}</h1>
          </header>

          <div
            class="product-grid-container"
            id="ProductGridContainer"
          >
            {%- if collection.products.size == 0 -%}
              <div class="collection collection--empty" id="product-grid" data-id="{{ section.id }}">
                <div class="loading-overlay gradient"></div>
                <div class="title-wrapper center">
                  <h2 class="title title--primary">
                    {{ 'sections.collection_template.empty' | t -}}
                    <br>
                    {{
                      'sections.collection_template.use_fewer_filters_html'
                      | t: link: collection.url, class: 'underlined-link link'
                    }}
                  </h2>
                </div>
              </div>
            {%- else -%}
              <div class="collection">
                <div class="loading-overlay gradient"></div>

                <ul
                  id="product-grid"
                  data-id="{{ section.id }}"
                  class="
                    grid product-grid grid--{{ section.settings.columns_mobile }}-col-tablet-down
                    grid--{{ section.settings.columns_desktop }}-col-desktop
                  "
                >
                  {% assign skip_card_product_styles = false %}
                  {%- for product in collection.products -%}
                    {% assign lazy_load = false %}
                    {%- if forloop.index > 2 -%}
                      {%- assign lazy_load = true -%}
                    {%- endif -%}

                    <li class="grid__item">
                      {% render 'card-product',
                        card_product: product,
                        media_aspect_ratio: section.settings.image_ratio,
                        image_shape: section.settings.image_shape,
                        show_secondary_image: section.settings.show_secondary_image,
                        show_vendor: section.settings.show_vendor,
                        show_rating: section.settings.show_rating,
                        lazy_load: lazy_load,
                        skip_styles: skip_card_product_styles,
                        quick_add: section.settings.quick_add,
                        section_id: section.id
                      %}
                    </li>

                    {%- assign skip_card_product_styles = true -%}
                  {%- endfor -%}
                </ul>

                {%- if paginate.pages > 1 -%}
                  {% render 'pagination', paginate: paginate, anchor: '' %}
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
        </main>
      </div>
    {%- endpaginate -%}
  </div>
</div>

{% schema %}
{
  "name": "Lucent Collection Grid",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 8,
      "max": 36,
      "step": 4,
      "default": 16,
      "label": "Products per page"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 3,
      "label": "Columns desktop"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        { "value": "adapt", "label": "Adapt" },
        { "value": "portrait", "label": "Portrait" },
        { "value": "square", "label": "Square" }
      ],
      "default": "adapt",
      "label": "Image ratio"
    },
    {
      "type": "select",
      "id": "image_shape",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "arch", "label": "Arch" },
        { "value": "blob", "label": "Blob" },
        { "value": "chevronleft", "label": "Chevron left" },
        { "value": "chevronright", "label": "Chevron right" },
        { "value": "diamond", "label": "Diamond" },
        { "value": "parallelogram", "label": "Parallelogram" },
        { "value": "round", "label": "Round" }
      ],
      "default": "default",
      "label": "Image shape"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": false,
      "label": "Show secondary image"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Show vendor"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": false,
      "label": "Show rating"
    },
    {
      "type": "select",
      "id": "quick_add",
      "default": "none",
      "label": "Quick add",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "standard", "label": "Standard" },
        { "value": "bulk", "label": "Bulk" }
      ]
    },

    {
      "type": "header",
      "content": "Sidebar"
    },
    {
      "type": "checkbox",
      "id": "enable_sidebar_collections",
      "default": true,
      "label": "Enable collections sidebar"
    },
    {
      "type": "link_list",
      "id": "sidebar_menu",
      "label": "Sidebar menu"
    },
    {
      "type": "text",
      "id": "sidebar_title",
      "label": "Sidebar title",
      "default": "All"
    },

    {
      "type": "header",
      "content": "Mobile"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "default": "2",
      "label": "Columns mobile",
      "options": [
        { "value": "1", "label": "1" },
        { "value": "2", "label": "2" }
      ]
    },

    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 140,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 80
    }
  ]
}
{% endschema %}
